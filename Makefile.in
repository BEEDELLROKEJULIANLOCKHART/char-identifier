DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= char-identifier
DIRS		= src
EXTENSION_VERSION = 0.1.2

XPI_NAME	= $(MODULE)
USE_EXTENSION_MANIFEST = 1
NO_JAR_AUTO_REG	= 1
INSTALL_EXTENSION_ID = $(MODULE)@dbaron.org
XPI_PKGNAME	= $(MODULE)-$(EXTENSION_VERSION)

DIST_FILES	= \
		install.rdf \
		$(NULL)

DIST_SIMPLE_PP_FILES = \
		data/Jamo.txt \
		$(NULL)

DIST_HAN_FILES	= \
		data/Unihan.txt \
		$(NULL)

DIST_NO_PP_FILES = \
		data/LICENSE \
		data/UnicodeData.txt \
		$(NULL)

XULAPP_DEFINES	= \
		-DEXTENSION_VERSION=$(EXTENSION_VERSION) \
		-DFIREFOX_VERSION=$(FIREFOX_VERSION) \
		-DMODULE=$(MODULE) \
		-DINSTALL_EXTENSION_ID=$(INSTALL_EXTENSION_ID) \
		$(NULL)

libs:: $(DIST_SIMPLE_PP_FILES)
	$(NSINSTALL) -D $(FINAL_TARGET)/data
	$(EXIT_ON_ERROR) \
	for f in $(DIST_SIMPLE_PP_FILES); do \
		echo "# This is a MODIFIED version of a Unicode Data File.  See the file" > $(FINAL_TARGET)/$$f; \
		echo "# LICENSE in this directory for more information." >> $(FINAL_TARGET)/$$f; \
		sed 's/#.*//;/^$$/d' $(srcdir)/$$f >> $(FINAL_TARGET)/$$f; \
	done

libs:: $(DIST_HAN_FILES)
	$(NSINSTALL) -D $(FINAL_TARGET)/data
	$(EXIT_ON_ERROR) \
	for f in $(DIST_HAN_FILES); do \
		echo "# This is a MODIFIED version of a Unicode Data File.  See the file" > $(FINAL_TARGET)/$$f; \
		echo "# LICENSE in this directory for more information." >> $(FINAL_TARGET)/$$f; \
		grep "^U+[0-9A-F]\+	k\(Cantonese\|Definition\|JapaneseKun\|JapaneseOn\|Korean\|Mandarin\)	" $(srcdir)/$$f  >> $(FINAL_TARGET)/$$f; \
	done

libs:: $(DIST_NO_PP_FILES)
	$(NSINSTALL) -D $(FINAL_TARGET)/data
	$(EXIT_ON_ERROR) \
	for f in $(DIST_NO_PP_FILES); do \
		cp $(srcdir)/$$f $(FINAL_TARGET)/data/`basename $$f`; \
	done

include $(topsrcdir)/config/rules.mk
